<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xunmao.demo.dao.AddressMapper">

  <!-- 
    （xunmao）这里省略了参数类型 map。
    参数 map 中包含两个元素，它们的 key 分别是： startIndex 和 pageSize。
    XML 文件通过上述 key 可以取到相应的值。
   -->
  <select id="findAddressById" resultType="com.xunmao.demo.pojo.Address">
    SELECT
        address_id,
        address,
        address2,
        district,
        city_id,
        postal_code,
        last_update
    FROM
        address
    WHERE
        address_id = #{address_id}
  </select>

</mapper>